@using OscarMayer.Extensions

@model Sitecore.Mvc.Presentation.RenderingModel

<div class="pro-tip">
    <div class="container">
        <div class="col-sm-12 col-md-6">
            <div class="tip-content">
                <h2 class="tip-title">@Html.Sitecore().Field("MediaTitle", Model.Item)</h2>
                <div class="tip-description">
                    <div class="quote-copy">
                        @Html.Sitecore().Field("MediaDescription", Model.Item)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 visible-lg visible-md">
            <div class="tip-media">
                @Html.Sitecore().ImageField("MediaImage", Model.Item, cssClass: "img-responsive")
            </div>
        </div>
    </div>
</div>